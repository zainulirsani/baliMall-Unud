{% include '@__main__/admin/base/partials/header.html.twig' %}
{% include '@__main__/admin/base/partials/sidebar.html.twig' %}

{% set headline_class = 'text-red' %}
{% set translate = 'message.error.' ~ status_code %}
{% if status_code == '404' %}{% set headline_class = 'text-yellow' %}{% endif %}

<div class="content-wrapper">
    {% include '@__main__/admin/base/partials/page_header.html.twig' %}

    <section class="content">
        {% include '@__main__/admin/base/partials/messages.html.twig' %}

        <div class="error-page">
            <h2 class="headline {{ headline_class }}"> {{ status_code }}</h2>
            <div class="error-content">
                <h3><i class="fa fa-warning {{ headline_class }}"></i> {{ translate|trans }}</h3>
            </div>
        </div>
    </section>
</div>

{% include '@__main__/admin/base/partials/modal.html.twig' %}
{% include '@__main__/admin/base/partials/footer.html.twig' %}
