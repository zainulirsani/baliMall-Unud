{% set admin_avatar = admin_user['u_photoProfile']|default('dist/img/adminlte/avatar-male.png') %}
{% set admin_info = admin_user['u_firstName'] ~ ' - ' ~ admin_user['u_role'] %}
{% set admin_member_info = 'message.info.member_since'|trans({'%date%': admin_user['u_createdAt']|date('M Y')}) %}

<header class="main-header">
    <a href="{{ path('homepage') }}" class="logo" target="_blank">
    <span class="logo-mini">
        <img src="{{ asset('dist/img/balimall.png') }}">
    </span>
    <span class="logo-lg"><b>{{ get_parameter('app_name') }}</b></span>
</a>

    <nav class="navbar navbar-static-top">
        <a href="javascript:void(0);" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                {{ render(controller('App\\Plugins\\AdminPlugin::adminNotification')) }}
                <li class="dropdown user user-menu">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="{{ asset(admin_avatar) }}" class="user-image" alt="User Photo Profile">
                        <span class="hidden-xs">{{ admin_user['u_firstName'] }}</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="{{ asset(admin_avatar) }}" class="img-circle" alt="User Photo Profile">
                            <p>
                                {{ admin_info }}
                                <small>{{ admin_member_info }}</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="javascript:void(0);" class="btn btn-default btn-flat">{{ 'menu.profile'|trans }}</a>
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('admin_logout') }}" class="btn btn-default btn-flat">{{ 'menu.logout'|trans }}</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
