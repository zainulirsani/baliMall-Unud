{% extends '@__main__/public/base/layouts/default.html.twig' %}

{% block content %}
    <main class="home-page">
        <section>
            <div class="container">
                {{ render(controller('App\\Plugins\\BannerPlugin::homepage')) }}
                <div class="row">
                    {{ render(controller('App\\Plugins\\PromoPlugin::homepage')) }}
                    {{ render(controller('App\\Plugins\\ProductCategoryPlugin::categories')) }}
                    {# {{ render(controller('App\\Plugins\\ProductPlugin::showcase')) }} #}
                    {# {{ render(controller('App\\Plugins\\ProductPlugin::showcaseBestSeller')) }} #}
                </div>
                {{ render(controller('App\\Plugins\\ProductPlugin::showcaseRecommendations')) }}
