                    <div class="home-tags home-tags--ghost">
                        <div class="row">
                            <h6 style="float: left; margin-top: 10px;">{{ 'message.info.craftsman_info'|trans }}</h6>
                            <div class="input" style="float: left; width: 250px; height: auto; margin-left: 5px;">
                                <div class="searchable-province">
                                    <input id="homepage-select-province" type="text" placeholder="{{ 'label.select_province'|trans }}" onkeyup="filterFunction(this, event);" value="Bali" title="">
                                    <ul id="homepage-list-province"></ul>
                                </div>
                            </div>
                        </div>
                        <div id="homepage-list-region" class="row">
                            {% for region in local_regions %}
                                <div class="dc4 mc12">
                                    <a href="javascript:void(0);" class="find-region" data-region="{{ region|lower }}">{{ region }}</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
