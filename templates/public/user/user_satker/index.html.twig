{% extends '@__main__/public/base/layouts/default.html.twig' %}

{% block content %}
    <style>
        .temp-btn {
            min-width: 120px;
            text-align: center;
            height: 24px;
            line-height: 24px;
            border-radius: 8px;
        }
    </style>
    <main class="pdl">
        {% include '@__main__/public/base/partials/breadcrumb.html.twig' %}
        <section>
            <div class="container">
                <div class="box">
                    <div class="row">
                        {% include '@__main__/public/user/fragments/menu.html.twig' %}
                        <div class="dc9 tc12">
                            <div class="sub-title">
                                <div class="text">
                                    <h3>Data Satker</h3>
                                </div>
                                <div class="clear"></div>
                                <div class="btn-wrapper">
                                    {# <a href="{{ path('user_satker_new') }}" class="sBtn small blue">
                                        {{ 'button.add'|trans }}
                                    </a> #}
                                </div>
                            </div>
                            <div id="user-ppk-treasurer-list" class="pr-card" data-id="{{ app.user.id }}" data-page="type">
                                <div class="row">
                                    {% for document in documents %}
                                        <div class="dc12">
                                            <div class="box pr-card__1">
                                                <div class="top">
                                                    <div class="text">{{ document['satkerName'] is not empty ?  document['satkerName']:'-' }}
                                                    </div>
                                                    {# <span class="badge blue temp-btn">
                                                        <a href="{{ path('user_satker_edit', {'id': document['id']}) }}">
                                                            {{ 'button.edit'|trans }}
                                                        </a>
                                                    </span> #}
                                                </div>
                                                <div class="info">
                                                    <div>
                                                        <span>No VA BNI : {{prefix ~ document['digitVa']}}</span>
                                                    </div>
                                                    {# <a href="{{ path('user_satker_delete') }}" class="sBtn red act-delete-satker" data-id="{{ document['id'] }}">{{ 'button.delete'|trans }}</a> #}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% if pagination is not empty and pagination.getNbResults > pagination.getMaxPerPage %}{{ html|raw }}{% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
