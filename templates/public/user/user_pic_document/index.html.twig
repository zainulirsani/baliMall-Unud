{% extends '@__main__/public/base/layouts/default.html.twig' %}

{% block content %}
    <style>
        .temp-btn {
            min-width: 120px;
            text-align: center;
            height: 24px;
            line-height: 24px;
            border-radius: 8px;
        }
    </style>
    <main class="pdl">
        {% include '@__main__/public/base/partials/breadcrumb.html.twig' %}
        <section>
            <div class="container">
                <div class="box">
                    <div class="row">
                        {% include '@__main__/public/user/fragments/menu.html.twig' %}
                        <div class="dc9 tc12">
                            <div class="sub-title">
                                <div class="text">
                                    <h3>{{ 'label.data_pic'|trans }}</h3>
                                </div>
                                <div class="clear"></div>
                                <div class="btn-wrapper">
                                    <a href="{{ path('user_pic_new') }}" class="sBtn small blue">
                                        {{ 'button.add'|trans }}
                                    </a>
                                </div>
                            </div>
                            <div id="user-tax-document-list" class="pr-card" data-id="{{ app.user.id }}" data-page="pic">
                                <div class="row">
                                    {% for document in documents %}
                                        <div class="dc12">
                                            <div class="box pr-card__1">
                                                <div class="top">
                                                    <div class="text">{{ document['name'] is not empty ?  document['name']:'-' }}<br><span style="font-size: 12px"><i>{{document['unit'] is not empty ?  document['unit']:'-' }}</i></span></div>
                                                    <span class="badge blue temp-btn">
                                                        <a href="{{ path('user_pic_edit', {'id': document['id']}) }}">
                                                            {{ 'button.edit'|trans }}
                                                        </a>
                                                    </span>
                                                </div>
                                                <div class="info">
                                                    <div>
                                                        <span>{{ document['email'] }} // {{ document['notelp'] }}</span>
                                                    </div>
                                                    <a href="{{ path('user_pic_delete') }}" class="sBtn red act-delete-pic" data-id="{{ document['id'] }}">{{ 'button.delete'|trans }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% if pagination is not empty and pagination.getNbResults > pagination.getMaxPerPage %}{{ html|raw }}{% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
