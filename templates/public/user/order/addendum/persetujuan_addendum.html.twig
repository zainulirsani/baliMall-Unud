{% extends '@__main__/public/base/layouts/default.html.twig' %}

{% block title %}Persetujuan Addendum
{% endblock %}

{% block stylesheets %}
	<style>
		.temp-btn {
			min-width: 120px;
			text-align: center;
			height: 24px;
			line-height: 24px;
			border-radius: 8px;
		}
		.styled-table {
			border-collapse: collapse;
			margin: 25px 0;
			font-size: 0.9em;
			font-family: sans-serif;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
		}
		.styled-table thead tr {
			background-color: #4b85cc;
			color: #ffffff;
			text-align: left;
		}
		.styled-table th,
		.styled-table td {
			padding: 12px 15px;
		}
		.styled-table tbody tr {
			border-bottom: 1px solid #dddddd;
		}

		.styled-table tbody tr:nth-of-type(even) {
			background-color: #f3f3f3;
		}

		.styled-table tbody tr:last-of-type {
			border-bottom: 2px solid #4b85cc;
		}
		.styled-table tbody tr.active-row {
			font-weight: bold;
			color: #4b85cc;
		}
		.badge-orange {
			background-color: #FEF2E5;
			font-size: 12px;
			padding: 5px 10px;
			text-align: center;
			border-radius: 10px;
			color: #CD6200;
			border: 1px solid #CD6200;
		}
		.badge-green {
			background-color: #EBF9F1;
			font-size: 12px;
			padding: 5px 10px;
			text-align: center;
			border-radius: 10px;
			color: #1F9254;
			border: 1px solid #1F9254;
		}
		.badge-red {
			background-color: #ffa5a582;
			font-size: 12px;
			padding: 5px 10px;
			text-align: center;
			border-radius: 10px;
			color: #4b85cc;
			border: 1px solid #4b85cc;
		}
		.badge-blue {
			background-color: #008ae838;
			font-size: 12px;
			padding: 5px 10px;
			text-align: center;
			border-radius: 10px;
			color: #008ae8;
			border: 1px solid #008ae8;
		}
		.btn-send-red,
		.btn-send-red:hover {
			background-color: #4b85cc;
			font-size: 14px;
			padding: 5px 10px;
			text-align: center;
			border-radius: 5px;
			color: #fff;
			border: 1px solid #4b85cc;
			margin: 2px;
			cursor: pointer;
			text-decoration: none;
		}
		.btn-send-red-border,
		.btn-send-red-border:hover {
			background-color: transparent;
			font-size: 14px;
			padding: 5px 10px;
			text-align: center;
			border-radius: 5px;
			color: #4b85cc;
			border: 1px solid #4b85cc;
			margin: 2px;
			cursor: pointer;
			text-decoration: none;
		}

        .card {
            margin-bottom: 20px;
        }

        .card-header {
            padding: 10px 20px;
            background-color: #f5f5f5;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .card-title {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
        }

        .card-body {
            padding: 20px;
        }

        .form-persetujuan-addendum {
            width: 100%;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            font-weight: 600;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
        }

		.selectric {
			width: 100%;
			padding: 4px;
			font-size: 16px;
			border-radius: 5px;
		}

		.selectric-form-control  {	
			width: 100%;
			padding: 10px;
			font-size: 16px;
			border: 1px solid #e0e0e0;
			border-radius: 5px;
		}

		.selectric-form-control:focus {
			outline: none;
			border-color: #4b85cc;
		}

		.selectric-form-control::placeholder {
			color: #e0e0e0;
		}

        .form-control:focus {
            outline: none;
            border-color: #4b85cc;
        }

        .form-control::placeholder {
            color: #e0e0e0;
        }

        .form-control:disabled {
            background-color: #f5f5f5;
        }

		.notShow {
			display: none !important;
		}

		.btn-primary {
			background-color: #4b85cc;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
		}

        .btn-primary:hover {
            background-color: #c91300;
        }

	
	</style>
{% endblock stylesheets %}

{% block content %}

	<main class="pdl dbu">
		<section>
			<div class="container">
				<div class="box">
					<div class="row">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title">Surat Permohonan Addendum</h4>
							</div>
							<div class="card-body">
								<form class="form-persetujuan-addendum" action="#" method="post">
									<div class="form-group mb-3">
										{# <iframe id="iframe-viewdoc" frameborder="0" style="width:100%;height:500px;"></iframe> #}
										<div style="display: flex; justify-content: center; width: 100%">
											<iframe id="iframe-viewdoc" frameborder="1" style="width:70%;height:500px;border:1px solid #e0e0e0;" src="{{ asset('assets/dummy/permohonan_addendum_surat_pesanan.pdf') }}#toolbar=0&navpanes=0&scrollbar=0"></iframe>
										</div>
										<br />										
										<label for="statusPersetujuan">Status</label>
										<select class="form-control status-persetujuan" id="statusPersetujuan" name="statusPersetujuan" placeholder="Pilih Status">
											<option value="1">Disetujui</option>
											<option value="0">Ditolak</option>
										</select>
									</div>
									<div id="viewKeterangan" class="form-group mb-3 notShow">
										<label for="keterangan">Keterangan</label>
										<textarea class="form-control" id="keterangan" name="keterangan" rows="3"></textarea>
									</div>
									<div style="display: flex; justify-content: center; width: 100%">
										<a href="{{ path('user_order_addendum_agreed', {'id': order.id}) }}" class="btn btn-primary">Submit</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>


    <script>
        $(document).ready(function() {
            $('#statusPersetujuan').change(function() {
                var status = $(this).val();
                console.log(status);
                if (status == 0) {
                    $('#viewKeterangan').removeClass('notShow');
                } else {
                    $('#viewKeterangan').addClass('notShow');
                }
            });
        });
    </script>
{% endblock %}
