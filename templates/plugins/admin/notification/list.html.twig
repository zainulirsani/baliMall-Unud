{% if total > 0 %}
    <div class="box box-primary">
        <div class="box-body">
            <div id="timeline">
                <ul class="timeline timeline-inverse">
                    {% for notification in notifications %}
                        <li>
                            <i class="fa fa-warning bg-yellow"></i>
                            <div class="timeline-item">
                                <span class="time">
                                    <i class="fa fa-clock-o"></i> {{ notification['n_createdAt']|date('d F Y H:i') }}
                                </span>
                                <h3 class="timeline-header"><b>{{ notification['n_title'] }}</b></h3>
                                <div class="timeline-body">{{ notification['n_content'] }}</div>
                                <div class="timeline-footer">
                                    {% if notification['n_url'] is not empty %}
                                        <a href="{{ notification['n_url'] }}" class="btn btn-primary btn-xs">{{ 'label.detail'|trans }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                    <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endif %}
