<li class="dropdown notifications-menu">
    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        {% if total > 0 %}<span class="label label-warning">{{ total }}</span>{% endif %}
    </a>
    <ul class="dropdown-menu">
        {% if total > 0 %}
            <li>
                <ul class="menu">
                    {% for notification in notifications|slice(0, 10) %}
                        {% set href = notification['n_url'] is not empty ? notification['n_url'] : 'javascript:void(0);' %}
                        <li><a href="{{ href }}"><i class="fa fa-warning text-yellow"></i> {{ notification['n_content'] }}</a></li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li class="header">No new notifications!</li>
        {% endif %}
        <li class="footer"><a href="{{ path('admin_notification') }}">View all</a></li>
    </ul>
</li>
