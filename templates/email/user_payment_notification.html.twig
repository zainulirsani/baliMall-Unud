{% extends '@__main__/public/base/layouts/email.html.twig' %}

{% block body %}
    <div class="text">
        <h1>Hi, {{ name }}!</h1>
        {% if recipient_type == 'buyer' %}
            <h3>Terimakasih! Konfirmasi pembayaran Anda untuk Invoice <strong>{{ invoices|join(', ') }}</strong> telah kami terima.</h3>
            <p>
                Gunakan tautan berikut untuk melihat riwayat transaksi Anda: <a href="{{ link }}" target="_blank">Riwayat Transaksi</a>
            </p>
        {% elseif recipient_type == 'admin' %}
            <h3>Bali Mall baru saja memperoleh konfirmasi pembayaran untuk Invoice <strong>{{ invoices|join(', ') }}</strong>.</h3>
            <p>
                Gunakan tautan berikut untuk melihat riwayat pesanan: <a href="{{ link }}" target="_blank">Riwayat Transaksi</a>
            </p>
        {% endif %}
    </div>
{% endblock %}
