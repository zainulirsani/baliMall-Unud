# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Tab indentation
[*.{php,twig}]
indent_size = 4

[*.{css,js}]
indent_size = 2
